{
	"name": "elysiajs-app",
	"version": "1.0.0",
	"description": "A simple Elysia.js application",
	"main": "src/app.ts",
	"scripts": {
		"start": "bun run --hot src/app.ts",
		"dev": "bun run src/app.ts",
		"build": "bun build src/app.ts --outdir=dist --target=node",
		"test": "bun test",
		"lint": "bun run eslint . --ext .ts,.js",
		"format": "bun run prettier --write ."
	},
	"dependencies": {
		"@elysiajs/cors": "^1.3.3",
		"@elysiajs/swagger": "^1.3.1",
		"bcryptjs": "^3.0.2",
		"crypto-js": "^4.2.0",
		"dayjs": "^1.11.13",
		"dotenv": "^17.0.1",
		"elysia": "^1.3.5",
		"zod": "^3.25.73"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/bun": "^1.2.18",
		"@types/crypto-js": "^4.2.2",
		"@types/node": "^24.0.10",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.5.1",
		"prettier": "^3.6.2",
		"typescript-eslint": "^8.35.1"
	}
}
