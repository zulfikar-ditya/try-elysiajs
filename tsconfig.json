{
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictBindCallApply": false,
		"noFallthroughCasesInSwitch": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": [],
		"typeRoots": ["./node_modules/@types", "./src/types"],

		"paths": {
			"@app/*": ["src/app/*"],

			"@config/*": ["src/config/*"],
			"@config": ["src/config/index.ts"],

			"@mails/*": ["src/app/mails/*"],
			"@mails": ["src/app/mails/index.ts"],

			"@errors/*": ["src/app/errors/*"],
			"@errors": ["src/app/errors/index.ts"],

			"@utils/*": ["src/utils/*"],
			"@utils": ["src/utils/index.ts"],

			"@appTypes/*": ["src/types/*"],

			"@controllers/*": ["src/app/controllers/*"],
			"@controllers": ["src/app/controllers/index.ts"],

			"@repositories/*": ["src/app/repositories/*"],
			"@repositories": ["src/app/repositories/index.ts"],

			"@routes/*": ["src/routes/*"],
			"@routes": ["src/routes/index.ts"],

			"@seeders/*": ["prisma/seeders/*"],
			"@seeders": ["prisma/seeders/index.ts"]
		}
	},
	"include": ["src/**/*", "prisma/**/*"],
	"exclude": ["node_modules", "dist"]
}
